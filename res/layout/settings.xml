<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="match_parent"
	android:orientation="vertical"
	android:background="#88000000"
	android:layout_gravity="bottom">

	<Button
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="generate"
		android:layout_weight="1.0"
		android:id="@+id/button"/>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent">

		<CheckBox
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:hint="use seed"
			android:id="@+id/use_seed"
			android:layout_weight="1.0"/>

		<CheckBox
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:hint="Triangle tip"
			android:id="@+id/sharp_tip"
			android:layout_weight="1.0"/>

		<CheckBox
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:id="@+id/anti_alias"
			android:hint="Anti-alias"
			android:layout_weight="1.0"/>

	</LinearLayout>

	<EditText
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:hint="seed"
		android:id="@+id/seed"
		android:inputType="numberSigned"
		android:singleLine="true"/>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:gravity="center_vertical">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:gravity="center_vertical"
			android:layout_weight="1.0">

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="Depth:"/>

			<Spinner
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:dropDownWidth="100dp"
				android:id="@+id/iteration_count"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:layout_weight="0.75">

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="angle:"/>

			<EditText
				android:layout_height="wrap_content"
				android:inputType="numberDecimal"
				android:layout_width="match_parent"
				android:layout_weight="1.0"
				android:id="@+id/angle"
				android:hint="35"/>

			<TextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_width="wrap_content"
				android:text="±"/>

			<EditText
				android:layout_height="wrap_content"
				android:inputType="numberDecimal"
				android:layout_width="match_parent"
				android:hint="25"
				android:layout_weight="1.0"
				android:id="@+id/angle_deviation"/>

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="deg"/>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:layout_weight="1.0">

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="initial size:"/>

			<EditText
				android:layout_height="wrap_content"
				android:inputType="numberDecimal"
				android:layout_width="match_parent"
				android:hint="7"
				android:id="@+id/initial_size"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:layout_weight="1.0">

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="initial length:"/>

			<EditText
				android:layout_height="wrap_content"
				android:inputType="numberDecimal"
				android:layout_width="match_parent"
				android:hint="50"
				android:id="@+id/initial_length"/>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:gravity="center_vertical">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="Relative size:"/>

		<EditText
			android:layout_height="wrap_content"
			android:inputType="numberDecimal"
			android:layout_width="match_parent"
			android:hint="0.75"
			android:layout_weight="1.0"
			android:id="@+id/relative_size"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="±"
			android:textAppearance="?android:attr/textAppearanceLarge"/>

		<EditText
			android:layout_height="wrap_content"
			android:inputType="numberDecimal"
			android:layout_width="match_parent"
			android:hint="0.01"
			android:layout_weight="1.0"
			android:id="@+id/relative_size_deviation"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:gravity="center_vertical">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="Relative length:"/>

		<EditText
			android:layout_height="wrap_content"
			android:inputType="numberDecimal"
			android:layout_width="match_parent"
			android:hint="0.725"
			android:layout_weight="1.0"
			android:id="@+id/relative_length"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="±"
			android:textAppearance="?android:attr/textAppearanceLarge"/>

		<EditText
			android:layout_height="wrap_content"
			android:inputType="numberDecimal"
			android:layout_width="match_parent"
			android:hint="0.075"
			android:layout_weight="1.0"
			android:id="@+id/relative_length_deviation"/>

	</LinearLayout>

</LinearLayout>

